@model SurveyWeb.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a Survey</h1>

<h3>But why would you?</h3>
<div>
    <h4>Survey</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyEntity.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SurveyEntity.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyEntity.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SurveyEntity.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyEntity.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SurveyEntity.Description)
        </dd>
    </dl>
    @if (!Model.hasAnswers)
    {
        <form method="post">
            <input type="hidden" asp-for="SurveyEntity.SurveyId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
    }
    else{
        <h6>Survey can not be deleted</h6>
        <a asp-page="./Index">Back to List</a>
    }
</div>
